<Window x:Class="ChatJuego.Cliente.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatJuego.Cliente"
        mc:Ignorable="d"
        Title="Inicio de Sesión" Height="450" Width="800">
    <Grid Background="Gray">
        <TextBox Name="TBUsuario" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Center" Width="160" Margin="316,142,316,254"></TextBox>
        <TextBox Name="TBContrasenia" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" VerticalAlignment="Center" Width="160" Margin="316,196,316,200"></TextBox>

        <Button x:Name="BotonIniciarSesion" Content="Iniciar Sesión" Width="100" Background="CadetBlue" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="210,190,210,100" Click="BotonIniciarSesion_Click"/>
        <Label Content="Usuario" HorizontalAlignment="Left" Margin="316,116,0,0" VerticalAlignment="Top"/>
        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="316,170,0,0" VerticalAlignment="Top"/>
        <Label Content="Inicio de Sesión" HorizontalAlignment="Left" Margin="347,48,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
