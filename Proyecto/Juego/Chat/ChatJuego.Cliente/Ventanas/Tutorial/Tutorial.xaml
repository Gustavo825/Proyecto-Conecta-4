<Window x:Class="ChatJuego.Cliente.Ventanas.Tutorial.Tutorial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatJuego.Cliente.Ventanas.Tutorial"
        mc:Ignorable="d"
        Title="Tutorial"  MaxHeight="800" MaxWidth="1200" MinHeight="800" MinWidth="1200">
    <Grid Background="#214CAE">
        <Grid.RowDefinitions>
            <RowDefinition Height="700"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" x:Name="ImagenTutorial"></Image>
        <Button Grid.Row="1" x:Name="BotoSalir" Click="BotoSalir_Click" Background="Transparent" Width="100" Height="50">
            <Image x:Name="BotonSalirImagen"></Image>
        </Button>
    </Grid>
</Window>
